<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_poster_name"
        android:textColor="@color/secondaryText"
        android:paddingLeft="@dimen/text_margin"
        android:layout_alignLeft="@+id/textView_comment_right"
        android:text="Poster"/>
    <TextView
        android:id="@+id/textView_comment_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_comment_right"
        android:layout_marginBottom="@dimen/comment_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:textColor="@color/commentText"
        android:padding="@dimen/comment_padding"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textView_poster_name"/>
</RelativeLayout>