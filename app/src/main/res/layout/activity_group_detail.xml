<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_group_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.insertcoolnamehere.showandsell.GroupDetailActivity">\
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/items_actual_details"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/group_detail_address"
                android:textAppearance="?textAppearanceListItem"
                android:text="@string/prompt_enter_location"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_address"
                android:drawablePadding="@dimen/activity_horizontal_margin"/>

            <TextView
                android:text="@string/prompt_extra_location_data"
                android:textAppearance="?textAppearanceListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/group_detail_extra_info"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_description"
                android:drawablePadding="@dimen/activity_horizontal_margin"/>

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:numStars="5"/>

            <android.support.percent.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/browse_frag_placeholder"
                    app:layout_widthPercent="100%"
                    app:layout_aspectRatio="66%" />
            </android.support.percent.PercentFrameLayout>
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_buy"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:id="@+id/item_detail_buy"
        app:backgroundTint="?attr/colorAccent"
        app:elevation="6dp"/>
</RelativeLayout>
