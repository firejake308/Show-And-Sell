<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_group_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.insertcoolnamehere.showandsell.GroupDetailActivity">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/items_actual_details"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/group_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:textAppearance="?textAppearanceListItem"
                        android:text="@string/prompt_enter_location"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_address"
                        android:drawablePadding="@dimen/activity_horizontal_margin"/>

                    <TextView
                        android:text="@string/prompt_extra_location_data"
                        android:textAppearance="?textAppearanceListItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/group_detail_extra_info"
                        android:layout_margin="16dp"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_description"
                        android:drawablePadding="@dimen/activity_horizontal_margin"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_rating" />
                        <RatingBar
                            android:id="@+id/rating_bar_display"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:numStars="5"
                            android:isIndicator="true"
                            style="?ratingBarStyleIndicator"
                            android:theme="@style/RatingBarStyle" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/rate_group"
                        android:textSize="16sp"/>
                    <RatingBar
                        android:id="@+id/rating_bar_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        android:numStars="5"
                        android:stepSize="1"/>
                    <Button
                        android:id="@+id/button_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/action_send"
                        style="?borderlessButtonStyle"
                        android:textColor="@color/colorAccent"
                        android:shadowColor="@color/colorAccent"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.percent.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <FrameLayout
                    android:id="@+id/browse_frag_placeholder"
                    app:layout_widthPercent="100%"
                    app:layout_aspectRatio="66%" />
            </android.support.percent.PercentFrameLayout>
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_donate"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:id="@+id/open_donate_btn"
        app:backgroundTint="?attr/colorAccent"
        app:elevation="6dp"/>
</RelativeLayout>
